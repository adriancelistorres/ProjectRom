@model IEnumerable<ProyectoRom.Models.data.Libro>

@{
    ViewData["Title"] = "BuscarLibros";
}

<h1>Filtro de busqueda por Descripcion</h1>
<br />
<div>
    <a href="@Url.Action("ListarLibros", "Libro")" class="btn btn-success">back</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_libro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_libro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stock)
            </td>
            <td>
                
                    <button class="btn btn-outline-info">@Html.ActionLink("editar libro","EditarLibros", "Libro", new {  id=item.id_libro  }) </button>

                    <button class="btn btn-outline-danger">@Html.ActionLink("eliminar libro","EliminarLibros", "Libro", new {  lib=item.id_libro  })</button>
                
            </td>
        </tr>
}
    </tbody>
</table>
